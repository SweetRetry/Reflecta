# Chat API Configuration
# Copy this file to .env and update with your actual values

# ========================================
# Database Configuration (Required)
# ========================================

# PostgreSQL Database URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
# Example for local PostgreSQL: postgresql://postgres:password@localhost:5432/langchain_memchat
DATABASE_URL=postgresql://postgres:password@localhost:5432/langchain_memchat

# ========================================
# API Configuration (Required)
# ========================================

# Anthropic API Key - REQUIRED
# For MiniMax: Get your API key from: https://platform.minimaxi.com/
# For Anthropic: Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-api-key-here

# Custom API Base URL (Required for MiniMax)
# For MiniMax domestic users: https://api.minimaxi.com/anthropic
# For MiniMax international users: https://api.minimaxi.io/anthropic
# For Anthropic (leave commented): https://api.anthropic.com
ANTHROPIC_BASE_URL=https://api.minimaxi.com/anthropic

# ========================================
# Model Configuration
# ========================================

# Model to use for chat completions
# Default: MiniMax-M2
CHAT_MODEL=MiniMax-M2

# Maximum tokens to generate per response
# Range: 1-100000, Default: 1000
MAX_TOKENS=1000

# Temperature for response generation
# Range: 0-2, Default: 0.7
# Lower = more focused, Higher = more creative
TEMPERATURE=0.7

# Top-p sampling parameter
# Range: 0-1, Default: 1.0
TOP_P=1.0

# Maximum number of history messages to include
# Default: 20
MAX_HISTORY_LENGTH=20

# ========================================
# Embedding & RAG Configuration
# ========================================

# Enable/disable embedding features
# Default: true
ENABLE_EMBEDDING=true

# Enable/disable RAG (Retrieval Augmented Generation) context
# Default: true
ENABLE_RAG=true

# Embedding model (local transformer model)
# Default: Xenova/multilingual-e5-small (384 dimensions)
# EMBEDDING_MODEL=Xenova/multilingual-e5-small

# ========================================
# Rate Limiting Configuration
# ========================================

# Maximum requests per minute per user/IP
# Default: 20
RATE_LIMIT_PER_MINUTE=20

# Maximum requests per hour per user/IP
# Default: 200
RATE_LIMIT_PER_HOUR=200

# ========================================
# Development Settings
# ========================================

# Next.js port (default: 3000)
# PORT=3000

# Node environment
# NODE_ENV=development
